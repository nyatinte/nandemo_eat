// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

// marmaidでmdファイルを作成
generator erd {
    provider = "prisma-erd-generator"
    output   = "scheme.md"
}

model Dislike {
    id           String     @id @default(cuid())
    createdAt    DateTime   @default(now())
    userId       String
    ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
    ingredientId String

    @@index([ingredientId])
}

model Dish {
    id            String        @id @default(cuid())
    createdAt     DateTime      @default(now())
    name          String
    ingredients   Ingredient[]
    category      Category      @relation(fields: [categoryId], references: [id])
    subCategories SubCategory[]

    categoryId String

    @@unique([name])
    @@index([categoryId])
}

model Ingredient {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    name      String
    dishes    Dish[]
    dislikes  Dislike[]

    @@unique([name])
}

model Category {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    name      String
    dishes    Dish[]

    @@unique([name])
}

model SubCategory {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    name      String
    dishes    Dish[]

    @@unique([name])
}
